#!/usr/local/bin/perl
use List::Util qw(first max maxstr min minstr reduce shuffle sum);
my $nMax = $ARGV[1];
my $nMin = $ARGV[0];
my $rep = 5;
my $totalSimTime = 20;
my $seed = -1; #Keep -1 to leave unchanged
my $stickiness = 0;
my $EIFSnoDIFS = 314;
my $ackTimeout = 340;
my $frameMinFer = 10;

my $verbose = false;
my $tracing = false;
my $ECA = false;
my $hyst = false;
my $dynStick = false;
my $bitmap = false;
my $srConservative = false;
my $srResetMode = false;
my @command = './waf --cwd=tmp/ --run "scratch/wlan';

foreach (@ARGV){
	$ECA = true
		if $_ eq '--eca';
	$hyst = true
		if $_ eq '--hyst';
	$bitmap = true
		if $_ eq '--bitmap';
	$verbose = true
		if $_ eq '--verbose';
	$srConservative = true
		if $_ eq '--srConservative';
	$tracing = true
		if $_ eq '--tracing';
	$srResetMode = true
		if $_ eq '--srResetMode';
	$dynStick = true
		if $_ eq '--dynStick';
}

if( $nMax > $nMin ){
	foreach my $i ($nMin..$nMax){
		foreach my $j (1 .. $rep){
			$seed = $j
				if($rep > 1);
			my @addition = ("        --nWifi=$i 
				--verbose=$verbose 
				--seed=$seed 
				--totalSimtime=$totalSimTime 
				--ECA=$ECA 
				--tracing=$tracing 
				--hysteresis=$hyst
				--stickiness=$stickiness 
				--dynStick=$dynStick										
				--bitmap=$bitmap 															
				--srConservative=$srConservative
				--srResetMode=$srResetMode
				--EIFSnoDIFS=$EIFSnoDIFS
				--AckTimeout=$ackTimeout
				--frameMinFer=$frameMinFer\"");
			my @outPut = "@command @addition";
			print("###Simulating iteration $j of $rep\n");
			print ("@outPut\n");
			system(@outPut);
		}
	}
}else{
		die("More than one node, please\n")
			if($nMax < 1);
		foreach my $j (1 .. $rep){
			$seed = $j
				if($rep > 1);
			my @outPut = ("@command --nWifi=$nMin 
				--verbose=$verbose 
				--seed=$seed 
				--totalSimtime=$totalSimTime 
				--ECA=$ECA 
				--tracing=$tracing 
				--hysteresis=$hyst 
				--stickiness=$stickiness
				--dynStick=$dynStick
				--bitmap=$bitmap
				--srConservative=$srConservative
				--srResetMode=$srResetMode
				--EIFSnoDIFS=$EIFSnoDIFS
				--AckTimeout=$ackTimeout
				--frameMinFer=$frameMinFer\"");
			print("###Simulating iteration $j of $rep\n");
			print ("@outPut\n");
			system(@outPut);
		}
}
